@model WebStoreCoreApplication.Domain.Entities.Employee

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EmployeeDetails</title>
</head>
<body>
    <table class="table table-bordered">
        <tr>
            <td>ID</td>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <td>Имя</td>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <td>Фамилия</td>
            <td>@Model.Surname</td>
        </tr>
        <tr>
            <td>Отчество</td>
            <td>@Model.Patronymic</td>
        </tr>
        <tr>
            <td>Возраст</td>
            <td>@Model.Age</td>
        </tr>
        <tr>
            <td>Должность</td>
            <td>@Model.EmployementDate</td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("К списку", "Employees", new {})
            </td>
        </tr>
    </table>
</body>
</html>
