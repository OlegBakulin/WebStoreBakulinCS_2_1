                    <input type="text" placeholder="Search" />
                </div>
            </div>
        </div>
    </div>
</div>

@functions
{
    string IsActive(string Controller, string Action) =>
        Equals(Controller, ViewContext.RouteData.Values["Controller"])
        &&
        Equals(Action, ViewContext.RouteData.Values["Action"])
        ? "active"
        : null;
}
