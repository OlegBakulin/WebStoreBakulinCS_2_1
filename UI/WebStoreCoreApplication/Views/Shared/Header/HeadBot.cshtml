                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="mainmenu pull-left">
                    <ul class="nav navbar-nav collapse navbar-collapse">
                        <li>
                            <a is-active-rout asp-controller="Base" asp-action="Index" class="active">Home</a>
                        </li>
                        <li class="dropdown">
                            <a asp-controller="Catalog" asp-action="Shop">Shop<i class="fa fa-angle-down"></i></a>
                            <ul role="menu" class="sub-menu">
                                <li><a is-active-rout asp-controller="Catalog" asp-action="Shop">Products</a></li>
                                @*<li><a asp-controller="Catalog" asp-action="ProductDetails">Product Details</a></li>*@
                                <li><a is-active-rout asp-controller="Base" asp-action="Checkout">Checkout</a></li>
                                <li><a is-active-rout asp-controller="Cart" asp-action="Details">Cart</a></li>
                                @*<li><a asp-controller="Account" asp-action="Login">Login</a></li>*@
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a is-active-rout asp-controller="Base" asp-action="Blog">Blog<i class="fa fa-angle-down"></i></a>
