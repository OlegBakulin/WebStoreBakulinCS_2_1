@model WebStoreCoreApplication.Domain.ViewModels.SelectBrandViewModel

<div class="brands_products">
    <!--brands_products-->
    <h2>Brands</h2>
    <div class="brands-name">
        <ul class="nav nav-pills nav-stacked">
            @foreach (var brand in Model.Brands.Where(b => b.ProductsCount > 0))
            {
                <li @(brand.Id == Model.CurrentBrandId ? "class=active" : null)>
                    <a asp-controller="Catalog" asp-action="Shop" asp-route-BrandId="@brand.Id">
                        @brand.Name-<span class="pull-right">(@brand.ProductsCount)</span>
                    </a>
                </li>
            }
        </ul>
    </div>
</div>